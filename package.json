{
  "name": "@specfocus/tiny-focus",
  "version": "0.0.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/specfocus/release.git"
  },
  "scripts": {
    "release": "node ../../scripts/publish react-focus ../@specfocus",
    "publish": "npm build && npm market && cd dist && npm publish --access public",
    "market": "node ./scripts/copy-package-json",
    "prebuild-skip": "tslint -c tslint.json -p tsconfig.json --fix",
    "clean": "rimraf ./dist",
    "build": "tsc"
  },
  "dependencies": {
    "@prisma/client": "3.13.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/history": "^4.7.9",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.5",
    "@types/react": "^17.0.37",
    "jest": "^27.4.5",
    "prisma": "3.13.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.5.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
